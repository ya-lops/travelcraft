<div class="avatar">
  <div class="avatar__image">
    <slot />
  </div>
</div>

<style lang="scss" is:global>
  .avatar {
    position: relative;
    width: 80px;
    aspect-ratio: 1;

    &::before,
    &::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      border-radius: 100%;
    }

    &::before {
      height: 100%;
      width: 100%;
      border: 2px solid #ff4c24;
      box-shadow:
        inset 0px 0px 20px 5px #000,
        0px 0px 20px 10px #000;
    }

    &::after {
      height: 110%;
      width: 110%;
      padding: 5px;
      border: 1px solid hsl(43, 100%, 50%);
    }

    &__image {
      width: 100%;
      height: 100%;
      padding: 3px;

      img {
        height: 100%;
        width: 100%;
        object-fit: cover;
        border-radius: 100%;
        overflow: clip;
      }
    }
  }
</style>
